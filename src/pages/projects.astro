---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import type { IProject } from "../models/project.model";
import projectDescriptor from "../descriptors/projects.json";

const projects: IProject[] = projectDescriptor.projects;
---

<Layout title="Damien Dumontet - projects">
  <main>
    <Nav />
    <h2
      class="text-3xl font-bold tracking-tight text-zinc-800 sm:text-4xl mt-24"
    >
      Last Projects
    </h2>
    <p class="mt-3 text-xl text-zinc-500 sm:mt-4">
      Here is a brief overview of the work I have accomplished over the past few
      years. Whether undertaken as a personal endeavor or professionally, each
      project was executed with passion and expertise.
    </p>
    <div class="h-0.5 w-full bg-zinc-100 my-16"></div>

    <div class="flex flex-wrap">
      {
        projects.map((project) => (
          <a
            href={`/project/${project.title.toLowerCase()}`}
            class="group p-8 hover:bg-zinc-50 rounded-lg transition-all duration-700 cursor-pointer flex-[50%]"
          >
            <div class="flex items-center mb-4">
              <div class="text-zinc-800 text-3xl font-bold">
                {project.title}
              </div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-8 h-8 ml-auto text-zinc-800"
              >
                <path
                  fill-rule="evenodd"
                  d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>

            <div class="w-full rounded-lg shadow-lg overflow-hidden relative">
              <img
                src={`/images/projects/${project.background}`}
                class="w-full group-hover:scale-125 group-hover:rotate-3 transition-all duration-700"
              />
            </div>

            <div class="flex items-center mt-4 gap-4">
              {project.stack.map((tech) => (
                <div class="bg-zinc-50 rounded-lg px-4 py-2 ring-1 ring-zinc-100 text-zinc-800 group-hover:bg-white transition-all duration-300 flex items-center justify-center">
                  <img
                    src={`/images/logos/${tech.icon}`}
                    class="h-5 w-5 mr-2"
                  />
                  <p>{tech.label}</p>
                </div>
              ))}
            </div>
          </a>
        ))
      }
    </div>
    <Footer />
  </main>
</Layout>
