---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-50 lg:px-28">
    <div
      class="mx-auto max-w-7xl px-4 sm:px-10 lg:px-20 bg-white ring-1 ring-zinc-100 pb-16"
    >
      <slot />
    </div>
  </body>
</html>
<style is:global></style>
<script>
  const menuElements = document.querySelectorAll<HTMLElement>("#menu a");
  menuElements.forEach((el) => {
    if (el.getAttribute("href") === window.location.pathname) {
      el.style.color = "rgb(45 212 191)";
    } else if (
      window.location.pathname.includes("/project/") &&
      el.getAttribute("href") === "/projects"
    ) {
      el.style.color = "rgb(45 212 191)";
    } else if (
      window.location.pathname.includes("/blog/") &&
      el.getAttribute("href") === "/articles"
    ) {
      el.style.color = "rgb(45 212 191)";
    }
  });
</script>
